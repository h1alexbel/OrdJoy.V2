<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
        <property name="connection.url">jdbc:h2:mem:ordjoy</property>
        <property name="connection.username"/>
        <property name="connection.password"/>
        <property name="connection.driver_class">org.h2.Driver</property>
        <property name="dialect">org.hibernate.dialect.H2Dialect</property>
        <property name="show_sql">true</property>
        <property name="format_sql">true</property>
        <property name="hibernate.hbm2ddl.auto">create</property>

        <mapping class="com.ordjoy.database.model.User"/>
        <mapping class="com.ordjoy.database.model.Album"/>
        <mapping class="com.ordjoy.database.model.Mix"/>
        <mapping class="com.ordjoy.database.model.Track"/>
        <mapping class="com.ordjoy.database.model.UserTrackOrder"/>
        <mapping class="com.ordjoy.database.model.TrackReview"/>
        <mapping class="com.ordjoy.database.model.AlbumReview"/>
        <mapping class="com.ordjoy.database.model.MixReview"/>
    </session-factory>
</hibernate-configuration>